{
  "doctype": "DocType",
  "name": "ARS Report Line",
  "module": "AlphaX Report Studio",
  "custom": 0,
  "istable": 1,
  "issingle": 0,
  "autoname": "hash",
  "fields": [
    {
      "fieldname": "label",
      "label": "Label",
      "fieldtype": "Data",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "line_type",
      "label": "Line Type",
      "fieldtype": "Select",
      "options": "Header\nGroup\nAccount\nFormula\nTotal\nBlank",
      "default": "Account",
      "in_list_view": 1
    },
    {
      "fieldname": "account",
      "label": "Account",
      "fieldtype": "Link",
      "options": "Account",
      "depends_on": "eval:doc.line_type=='Account'"
    },
    {
      "fieldname": "filter_dimension",
      "label": "Dimension Filter (JSON)",
      "fieldtype": "Code",
      "options": "JSON",
      "description": "Example: {\"branch\":\"Riyadh\"}"
    },
    {
      "fieldname": "formula",
      "label": "Formula",
      "fieldtype": "Data",
      "depends_on": "eval:doc.line_type=='Formula'",
      "description": "Example: LINE('Revenue') - LINE('Cost')"
    },
    {
      "fieldname": "bold",
      "label": "Bold",
      "fieldtype": "Check"
    },
    {
      "fieldname": "indent",
      "label": "Indent Level",
      "fieldtype": "Int",
      "default": 0
    },
    {
      "fieldname": "sort_order",
      "label": "Sort Order",
      "fieldtype": "Int",
      "default": 0
    }
  ],
  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1,
      "submit": 0,
      "cancel": 0,
      "amend": 0
    }
  ],
  "allow_rename": 1,
  "editable_grid": 1,
  "engine": "InnoDB",
  "sort_field": "modified",
  "sort_order": "DESC"
}